
    <main id="details">
        <section id="details-info">
            <div class="game-image">
                <img src="{{data.image}}">
            </div>

            <div class="game-info">
                <div class="game-text">
                    <h1 id="name">{{data.name}}</h1>
                    <h3 id="platform">Platform: {{data.platform}}</h3>
                    <p id="price"><span>Price: ${{data.price}}</span></p>
                    <p id="genre"><span>Genre: {{data.genre}}</span></p>
                    <p id="description">{{data.description}}</p>
                </div>
                <div class="product-btn">
                    <!--Only for registered user and author of the publication -->
                    {{#if isAuthenticated}}
                    {{#if isOwner}}
                    <div class="author">
                        <a href="/game/{{data._id}}/edit" class="btn-edit">Edit</a>
                        <a href="/game/{{data._id}}/delete" class="btn-delete">Delete</a>
                    </div>
                    {{else}}
                    
                    <!-- Logged in user who has not yet buy this game code-->
                    {{#if isBuyer}}
                     <!-- Logged in user who has already buy this game code-->
                     <p class="buy-message">You have already bought this game</p>
                    {{else}}
                     <a href="/game/{{data._id}}/buy" method="GET" class="btn-buy">Buy</a>
                    {{/if}}
                    {{/if}}
                    {{/if}}
                </div>
            </div>
        </section>
    </main>

  